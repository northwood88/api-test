        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.18.1</version>
                        <configuration>
                            <argLine>-Dfile.encoding=UTF-8</argLine>
                            <systemProperties>
                                <property>
                                    <name>org.uncommons.reportng.escape-output</name>
                                    <value>false</value>
                                </property>
                            </systemProperties>
                            <properties>
                                <property>
                                    <name>usedefaultlisteners</name>
                                    <value>false</value>
                                    <name>forkMode</name>
                                    <value>never</value>
                                </property>
                            </properties>
                            <groups>${vxGroups}</groups>
                            <suiteXmlFiles>
                                <suiteXMLFile>./Suites/base.xml</suiteXMLFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.ea.vx</groupId>
                                            <artifactId>VxWebUICompanion</artifactId>
                                            <version>1.8.0</version>
                                            <excludes>**/META-INF/**</excludes>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>./VxWebUI</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.3.2</version>
                        <executions>
                            <execution>
                                <id>Determine Windows Web Driver Version</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>com.ea.vx.webui.companion.DetermineMicrosoftWebDriverBuild</mainClass>
                            <arguments>
                                <argument>${project.basedir}</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
